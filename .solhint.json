{
  "extends": "solhint:recommended",
  "rules": {
    "quotes": "double",
    "avoid-throw": false,
    "var-name-mixedcase": false,
    "not-rely-on-time": false,
    "reason-string": false,
    "no-empty-blocks": false,
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "compiler-version": ["error", "^0.8.0"],
    "func-visibility": ["warn", { "ignoreConstructors": true }]
  },
  "plugins": ["prettier"]
}
